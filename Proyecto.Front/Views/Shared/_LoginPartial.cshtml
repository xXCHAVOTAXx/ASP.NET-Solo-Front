@using Microsoft.AspNet.Identity
@if (Request.IsAuthenticated)
{
    using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { id = "logoutForm", @class = "navbar-right" }))
    {
        @Html.AntiForgeryToken()

        <ul class="nav navbar-nav">
            <li class="nav-item">
                <a class="nav-link" id="btnUsuario" href="#"><i class="fas fa-user-tie"></i>&nbsp; @User.Identity.GetUserName() </a>
            </li>
            <li class="nav-item"><a class="nav-link" href="javascript:document.getElementById('logoutForm').submit()"><i class="fas fa-sign-out-alt"></i>&nbsp; Cerrar sesión</a></li>
        </ul>
    }
}
else
{
    <ul class="nav navbar-nav navbar-right">
        <li class="nav-item"><a class="nav-link" href="@Url.Action("Login", "Account", routeValues: null)"><i class="fas fa-fw fa-sign-in-alt"></i>&nbsp; Iniciar sesión</a></li>
    </ul>
}